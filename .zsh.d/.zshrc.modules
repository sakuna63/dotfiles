# z.sh
if [ -f ~/.zsh.d/modules/z/z.sh ]; then
  source ~/.zsh.d/modules/z/z.sh
  export _Z_CMD=j
fi

# zsh-notifier
source ~/.zsh.d/modules/zsh-notify/notify.plugin.zsh
zstyle ':notify:*' error-icon $HOME/.zsh.d/modules/zsh-notify-icons/unko.png
zstyle ':notify:*' success-icon $HOME/.zsh.d/modules/zsh-notify-icons/smile.png
zstyle ':notify:*' command-complete-timeout 3

source ~/.zsh.d/modules/zsh-syntax-highlighting/zsh-syntax-highlighting.zsh
source ~/.zsh.d/modules/zsh-bd/bd.zsh
source ~/.zsh.d/modules/zsh-autosuggestions/zsh-autosuggestions.zsh
alias genymotion_peco='bash -c "source ~/.zsh.d/modules/genymotion-peco/bin/genymotion_peco.sh; genymotion_peco"'
