alias g='git'
alias t='tig'

########
# Peco #
########

alias -g B='`git branch | peco | head -n 1 | sed -e "s/^\*[ ]*//g"`'
# copy commit number
alias ccn="git log --no-merges --date=short --pretty='format:%h %cd %an %d %s | peco | sed -e 's/\ .*// | pbcopy"
# alias -g LR='`git branch -a | peco --query "remotes/ " | head -n 1 | sed -e "s/remotes\/\([^\/]*\/\(.*\)\)/\2 \1/"`'

