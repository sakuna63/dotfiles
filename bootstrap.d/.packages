# Ruby Gems                                                                   #
###############################################################################

if [ `rbenv versions | wc -l` -eq 1 ]; then # system ruby only
  latest_version=`rbenv install --list | sed 's/\s//g' | grep '^[0-9\.]\+$' | tail -n 1`
  rbenv install $latest_version
  rbenv global $latest_version
  rbenv rehash
fi
