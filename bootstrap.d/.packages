brew install ruby-build
brew install ssh-copy-id
brew install terminal-notifier
brew install tig
brew install tmux
brew install tree
brew install vimpager

# Install casks

brew install alfred
brew install appcleaner
# brew cask install beardedspice
brew install caffeine
brew install calibre
brew install dash
