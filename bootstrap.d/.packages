#!/usr/bin/env bash

# Install command-line tools using Homebrew.

# Ask for the administrator password upfront.
sudo -v

# Keep-alive: update existing `sudo` time stamp until the script has finished.
while true; do sudo -n true; sleep 60; kill -0 "$$" || exit; done 2>/dev/null &

###############################################################################
# HomeBrew                                                                    #
###############################################################################

# Install homebrew command
if ! which brew >/dev/null 2>&1; then
  /usr/bin/ruby -e "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/master/install)"
fi

brew tap homebrew/binary
brew tap caskroom/cask
brew tap homebrew/science
brew tap homebrew/versions
brew tap caskroom/versions
brew tap peco/peco
brew tap sanemat/font

# Make sure we’re using the latest Homebrew.
brew update

# Upgrade any already-installed formulae.
brew upgrade --all

# Install GNU utilities (those that come with OS X are outdated).
brew install binutils
brew install coreutils
sudo ln -s /usr/local/bin/gsha256sum /usr/local/bin/sha256sum
brew install diffutils
brew install findutils --with-default-names
brew install moreutils
brew install gawk
brew install gnu-sed --with-default-names
brew install gnu-tar --with-default-names
brew install gnu-which --with-default-names
brew install grep --with-default-names
brew install gzip
brew install wdiff --with-gettext
brew install wget --with-iri

brew install bash
brew install unzip

# Install Zsh 5.
# Note: don’t forget to add `/usr/local/bin/bash` to `/etc/shells` before
# running `chsh`.
brew install zsh

# Install more recent versions of some OS X tools.
brew install homebrew/dupes/grep
brew install homebrew/dupes/openssh

# Install font
brew install ricty --vim-powerline
cp -f $(brew --cellar)/ricty/3.2.4/share/fonts/Ricty*.ttf ~/Library/Fonts/
fc-cache -vf

# Install other useful binaries.
brew install Caskroom/cask/xquartz
brew install ag
brew install argon/mas/mas
brew install cliclick
brew install ffmpeg
brew install ghostscript
brew install git
brew install ghq
brew install go
brew install graphviz
brew install gifsicle
brew install heroku-toolbelt
brew install hub
brew install imagemagick --with-webp
brew install jad
brew install jq
brew install montage
brew install nkf
brew install peco
brew install phantomjs
brew install rbenv
brew install reattach-to-user-namespace
brew install rename
brew install renameutils
brew install rmtrash
brew install ruby-build
brew install ssh-copy-id
brew install terminal-notifier
brew install tig
brew install tmux
brew install tree
brew install vimpager

# Install casks

brew cask install alfred2
brew cask install appcleaner
brew cask install beardedspice
brew cask install caffeine
brew cask install day-o
brew cask install disk-inventory-x
brew cask install dropbox
brew cask install evernote
brew cask install fantastical
brew cask install flux
brew cask install google-drive
brew cask install google-japanese-ime
brew cask install hyperswitch
brew cask install iterm2
brew cask install karabiner
brew cask install spectacle
brew cask install the-unarchiver
brew cask install virtualbox
brew cask install rocket

# Remove outdated versions from the cellar.
brew cleanup -s
brew cask cleanup

brew linkapps

# Optional cellers

## Android
